package game;

import java.awt.Graphics;
import java.awt.image.BufferedImage;

public class Board {
	//2D-s tömb a táblánknak, ami 15x15-ös
	private int row = 15;
	private int col = 15;
	private Cell[][] board = new Cell[row][col];
	
	//ctor
	public Board(int r, int c) {
		row = r;
		col = c;
		for(int i = 0; i < row; i++) {
			for(int j = 0; j < col; j++) {
				board[i][j] = null;
			}
		}
	}
	public void drawOnBoard(Board board, Graphics g, BufferedImage image) {
		
		
	}
	public int getBoardRow() {
		return row;
	}
	public int getBoardCol() {
		return col;
	}
}
