package game;

public class Board {
	//2D-s tömb a táblánknak, ami 15x15-ös
	private int row = 15;
	private int col = 15;
	private Cell[][] board = new Cell[row][col];
	
	//ctor
	public Board(int r, int c) {
		row = r;
		col = c;
		for(int i = 0; i < row; i++) {
			for(int j = 0; j < col; j++) {
				board[i][j] = 0;
			}
		}
	}
	public void drawBoard(Board board) {
			
	}
	public int getBoardRow() {
		return row;
	}
	public int getBoardCol() {
		return col;
	}
}
